{% extends "layout/app.twig" %}

{% block title%}
    Material Todo List
{% endblock %}

{% block content %}
    <h2 class="center">Material To Do List</h2>
    <div id="exists" class="field errors hidden">
        <p>Item already exists below!</p>
    </div>
    <!-- Modal Structure -->
    <div id="editModal" class="modal modal-fixed-footer">
        <div class="modal-content">
            <h4>Edit Todo Item</h4>
            <form action="edit-form">
                <div class="field">
                    <label for="editModalInput">Edit Content</label>
                    <input type="text" name="todo-item" id="editModalInput">
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="submit" class="modal-close waves-effect waves-green btn-flat">Update Todo Item</button>
        </div>
    </div>

    <form id="todo-form">
        <div class="field">
            <label for="todo-item">Enter a Todo Item (Press Enter to Add)</label>
            <input type="text" name="todo-item" id="todo-input">
        </div>
    </form>
    <ul id="todo-list" class="todo-collection collection with-header">
        <li class="collection-header"><h4>Your To Do Items</h4></li>
        {# <li class="collection-item">Task 1<a href="#!" class="secondary-content"><i class="material-icons">send</i></a></li>
        <li class="collection-item">Task 2<a href="#!" class="secondary-content"><i class="material-icons">send</i></a></li>
        <li class="collection-item">Task 3<a href="#!" class="secondary-content"><i class="material-icons">send</i></a></li>
        <li class="collection-item">Task 4<a href="#!" class="secondary-content"><i class="material-icons">send</i></a></li> #}
    </ul>
{% endblock %}